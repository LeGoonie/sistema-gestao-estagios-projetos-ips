@model G13WebApplication.Models.Ata

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <head>
        <link rel="stylesheet" href="~/css/varios.css" />
    </head>

<h2 class="h3-custom">Criação de nova Ata</h2>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form method="post" asp-controller="Atas" asp-action="Create" enctype="multipart/form-data" style="margin-left:-4%">
                <div class="form-group">
                    <label for="data" class="control-label"></label>
                    <input name="data" type="date" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="fil" class="control-label" style="margin-left:-1%"></label>
                    <input name="fil" type="file" accept=".pdf" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btn-primary btn-blue-custom" />
                </div>
            </form>
        </div>
    </div>
</div>

<script>
  "use strict";

  function AJAXSubmit (oFormElement) {
    var oReq = new XMLHttpRequest();
    oReq.onload = function(e) {
    oFormElement.elements.namedItem("result").value =
      'Result: ' + this.status + ' ' + this.statusText;
    };
    oReq.open("post", oFormElement.action);
    oReq.send(new FormData(oFormElement));
  }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
