@model G13WebApplication.Models.Activity_Document

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/varios.css" />
</head>
<h3>Pretende apagar este documento?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DocumentName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DocumentName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DocumentPath)
        </dt>
        <dd class="col-sm-10">
            <a asp-action="OpenTemplate" asp-controller="Home" asp-route-name="@Model.DocumentName" class="a-custom">Abrir ficheiro</a>
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" asp-for="Activity_DocumentId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
