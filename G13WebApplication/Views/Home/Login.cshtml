
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/css/loginV2.css" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="~/sweetAlert/sweetalert.css" rel="stylesheet" />
    <script src="~/sweetAlert/sweetalert.min.js"></script>
</head>
<main role="main" class="pb-3">
    @Html.Partial("_NotificationPanel")
</main>
<body>
    <div class="container login-container">
        <div class="row justify-content-center">
            <div class="col-md-6 login-form-2">
                <br />
                <img style="margin:0" src="~/images/ips.png" width="95" height="70" alt="">
                <br />
                <form>
                    <div class="form-group">
                        <input id="email" name="userEmail" type="text" class="form-control" placeholder="Email" />
                    </div>

                    <div class="form-group">
                        <input type="password" name="userPassword" class="form-control" placeholder="Palavra-Passe" />
                    </div>

                    <div class="form-group" style="margin-top:4%">
                        <a asp-action="GoToPasswordRecovery" class="ForgetPwd" value="Login">Esqueceu-se da Palavra-Passe?</a>
                    </div>
                    <br />

                    <div class="form-group" style="margin-top:-3%">
                        <input type="submit" asp-action="Login" class="btnSubmit" id="btn_login" value="Login" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>