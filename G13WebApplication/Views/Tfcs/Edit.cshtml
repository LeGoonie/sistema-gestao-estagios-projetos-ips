@model G13WebApplication.Models.Tfc

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/varios.css" />
</head>
<h2 class="h3-custom">Edição de TFC</h2>

<hr />
<div class="container">
    <div class="row">
            <form asp-controller="Tfcs" asp-action="Edit" enctype="multipart/form-data">
                <input type="hidden" asp-for="TfcId" />
                <div class="form-group">
                    <label for="TfcType" class="control-label">Tipo de trabalho</label>
                    <select class="form-control rounded" name="TfcType" value="@Model.TfcType">
                        <option value="Estágio">Estágio</option>
                        <option value="Projeto">Projeto</option>
                    </select>
                    <span for="TfcType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Name" class="control-label">Nome</label>
                    <input name="Name" class="form-control" value="@Model.Name" />
                </div>
                <div class="form-group">
                    <label for="Details" class="control-label">Detalhes</label>
                    <input name="Details" class="form-control" value="@Model.Details" />
                </div>
                <div class="form-group">
                    <label for="Company" class="control-label">Empresa</label>
                    <input name="Company" class="form-control" value="@Model.Company" />
                </div>
                <div class="form-group">
                    <label for="Location" class="control-label">Localização</label>
                    <input name="Location" class="form-control" value="@Model.Location" />
                </div>
                <div class="form-group">
                    <label for="fil" class="control-label">Anexo</label>
                    <br />
                    <input name="fil" type="file" accept=".pdf" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Submeter" class="btn btn-primary btn-blue-custom" />
                </div>
            </form>
        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
