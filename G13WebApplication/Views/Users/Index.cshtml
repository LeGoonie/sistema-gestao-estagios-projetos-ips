@model IEnumerable<G13WebApplication.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/varios.css" />
</head>
<div class="container">
    <div class="row">
        <div class="col-sm">
        </div>
        <div class="col-sm">
        </div>
        <div class="col-sm">
            <form class="form-inline ml-auto" asp-controller="Users" asp-action="Index" method="get">
                <div class="md-form my-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="Número de estudante" name="SearchString" aria-label="Search">
                    <input type="submit" value="Filter" />
                </div>
            </form>
            <a asp-controller="Users" asp-action="Index" method="get">Remover filtro</a>
        </div>
    </div>

    <div class="row" style="margin-top:2%">
        <div class="col-sm">
            <a asp-action="Create">Create New</a>
        </div>
        <div class="col-sm">
        </div>
        <div class="col-sm">
        </div>
    </div>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StudentId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentId)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
