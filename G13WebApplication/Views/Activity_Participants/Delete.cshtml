
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Activity_Participant</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Atividade
        </dt>
        <dd class="col-sm-10">
            @ViewData["Atividade"]
        </dd>
        <dt class = "col-sm-2">
            Participante
        </dt>
        <dd class = "col-sm-10">
            @ViewData["Participante"]
            @if(ViewData["StudentNumber"] != null){
                @ViewData["StudentNumber"].ToString()
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" name="id" value="@ViewData["Activity_Participant"]" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
